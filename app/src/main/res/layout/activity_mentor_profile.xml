            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:text="Book a session"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="18sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/ser_2_des"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            android:layout_marginTop="15dp"
            />

        <!--        end of service 2 -->

        <!--        beginning of sevrice 3 -->
        <TextView
            android:textSize="18dp"
            android:id="@+id/ser_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="18px"
            android:text="Design Coaching &amp; Review"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:paddingTop="30dp"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/book_ser_2" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/book_ser_2"
            >


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="25dp"

                android:background="@color/Warning01"
                app:shapeAppearanceOverlay="@style/offers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nunito_regular"
                android:lineHeight="24px"
                android:text="$20/week"
                android:textColor="@color/Warning02"
                android:textFontWeight="400" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ser_3_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ser_3"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            android:text="@string/ser_3_des"
            android:textSize="15dp"
            android:fontFamily="@font/nunito_regular"
            android:lineHeight="21sp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/book_ser_3"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:text="Book a session"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="18sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/ser_3_des"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            android:layout_marginTop="15dp"/>

<!--        end of service 3-->

        <View
            android:id="@+id/div_line_ser"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:background="@color/Neutral03"
            app:layout_constraintTop_toBottomOf="@id/book_ser_3" />

<!--        Social Media -->
        <TextView
            android:id="@+id/social_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="28px"
            android:textSize="22dp"
            android:text="Services offered"
            android:textColor="@color/black"
            android:textFontWeight="700"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/div_line_ser" />

        <TextView
            android:id="@+id/social_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/social_title"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            android:text="@string/social_text"
            android:textSize="15dp"
            android:fontFamily="@font/nunito_regular"
            android:lineHeight="21sp"
            android:textColor="@color/gray"/>

        <Button
            android:id="@+id/linkedin_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_linkedin"
            app:layout_constraintTop_toBottomOf="@id/social_des"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/instagram_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_instagram"
            app:layout_constraintTop_toBottomOf="@id/social_des"
            app:layout_constraintLeft_toRightOf="@id/linkedin_btn"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            />

<!--        end of social media -->

        <View
            android:id="@+id/div_line_social"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/Neutral03"
            app:layout_constraintTop_toBottomOf="@id/instagram_btn" />

<!--        previous work-->

