        </RelativeLayout>

<!--        7-9-->
        <RelativeLayout
            android:id="@+id/img_group3"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/img_group2"
