            app:layout_constraintEnd_toStartOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/prev_work_des"
            app:shapeAppearanceOverlay="@style/corneredSquare" />

<!--        small works-->
        <RelativeLayout
            android:id="@+id/img_group1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/big_work"
            app:layout_constraintRight_toLeftOf="@id/guideline5"
