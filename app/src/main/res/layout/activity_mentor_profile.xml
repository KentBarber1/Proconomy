<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".mentor_profile"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".mentor_profile"
        >


        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="380dp"
            android:layout_height="202dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_img"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toEndOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            app:shapeAppearanceOverlay="@style/corneredSquare" />


        <LinearLayout
            android:id="@+id/name_occu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/verified_mentor"
            app:layout_constraintEnd_toStartOf="@+id/love_share"
            app:layout_constraintStart_toEndOf="@id/profile_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeableImageView">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/mentor_name"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/profile_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/mentor_occupation"
                android:textColor="@color/gray"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/love_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toEndOf="@id/name_occu"
            app:layout_constraintTop_toBottomOf="@id/shapeableImageView">

            <Button
                android:id="@+id/icons_share"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_share_profile"
                app:layout_constraintEnd_toStartOf="@+id/icons_love"
                app:layout_constraintStart_toEndOf="@+id/profile_occupation"
                tools:layout_editor_absoluteY="317dp" />

            <Button
                android:id="@+id/icons_love"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_love_profile"
                android:clipToOutline="true"
                android:paddingLeft="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/icons_share"
                tools:layout_editor_absoluteY="317dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/verified_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/name_occu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_verified_mentor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Verified Mentor"
                android:textColor="@color/Primary01"
                android:textSize="21dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/currently_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="top"
            android:lineHeight="18sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/profile_employment"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/verified_mentor" />

        <TextView
            android:id="@+id/profile_intro"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_regular"
            android:lineHeight="18sp"
            android:text="@string/intro_para"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintRight_toLeftOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/night_session" />

        <View
            android:id="@+id/div_line_intro"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/Neutral03"
            app:layout_constraintTop_toBottomOf="@id/profile_intro" />

        <TextView
            android:id="@+id/certi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="24px"
            android:text="Industry Certifications"
            android:textColor="@color/black"
            android:textFontWeight="700"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/div_line_intro" />

        <LinearLayout
            android:id="@+id/listview_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/certi_title">

            <ListView
                android:id="@+id/certifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:divider="@null" />

        </LinearLayout>

        <View
            android:id="@+id/div_line_certi"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/Neutral03"
            app:layout_constraintTop_toBottomOf="@id/listview_container" />


        <TextView
            android:id="@+id/services_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_bold"
            android:lineHeight="28px"
            android:textSize="22dp"
            android:text="Services offered"
            android:textColor="@color/black"
            android:textFontWeight="700"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/div_line_certi" />

<!--        beginning of sevrice 1 -->
        <TextView
