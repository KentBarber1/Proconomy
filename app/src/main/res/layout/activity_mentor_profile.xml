<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".mentor_profile">


        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="380dp"
            android:layout_height="202dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_img"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/back_button"
            app:shapeAppearanceOverlay="@style/corneredSquare" />


        <LinearLayout
            android:id="@+id/name_occu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/verified_mentor"
            app:layout_constraintEnd_toStartOf="@+id/love_share"
            app:layout_constraintStart_toEndOf="@id/profile_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeableImageView">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/mentor_name"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/profile_occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/mentor_occupation"
                android:textColor="@color/gray"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/love_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toEndOf="@id/name_occu"
            android:paddingLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/shapeableImageView">

            <Button
                android:id="@+id/icons_share"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_share_profile"
                app:layout_constraintEnd_toStartOf="@+id/icons_love"
                app:layout_constraintStart_toEndOf="@+id/profile_occupation"
                tools:layout_editor_absoluteY="317dp" />

            <Button
                android:id="@+id/icons_love"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_love_profile"
                android:clipToOutline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/icons_share"
                tools:layout_editor_absoluteY="317dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/verified_mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/name_occu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_verified_mentor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="Verified Mentor"
                android:textColor="@color/Primary01"
                android:textSize="21dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/currently_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="top"
            android:lineHeight="18sp"
            android:lineSpacingExtra="2sp"
            android:text="@string/profile_employment"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/verified_mentor" />

        <TextView
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/intro_para"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintRight_toLeftOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/night_session"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/black"
            android:lineHeight="18sp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/dollar"
            android:textColor="#1685C4"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@id/night_session"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_see_ava"
            android:onClick="seeAvailability"
            android:text="@string/see_av"
            android:fontFamily="@font/nunito_bold"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />


        <RelativeLayout
            android:id="@+id/discount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/currently_e">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@color/Primary00"
                app:shapeAppearanceOverlay="@style/offers"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="420dp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="3dp"
                android:src="@drawable/offers_blue_cir"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="420dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunito_bold"
                android:paddingRight="15dp"
                android:text="@string/discount"
                android:textColor="@color/Primary01" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/night_session"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/profile_guideline"
            app:layout_constraintTop_toBottomOf="@id/discount">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@color/Primary00"
                app:shapeAppearanceOverlay="@style/offers"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="420dp" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="3dp"
                android:src="@drawable/offers_blue_cir"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="420dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunito_bold"
                android:paddingRight="15dp"
                android:text="@string/night_session"
                android:textColor="@color/Primary01" />
        </RelativeLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/profile_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="18dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="391dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="400dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>