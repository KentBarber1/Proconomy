<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mentoricon"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="270dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/mentorB"
            android:layout_width="110sp"
            android:layout_height="50sp"
            android:layout_marginTop="120sp"
            android:layout_marginBottom="30sp"
            android:backgroundTint="#1785C4"
            android:onClick="mentorLogin"
            android:text="LOG IN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <Button
            android:id="@+id/button2"
            android:layout_width="110sp"
            android:layout_height="50sp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="120sp"
            android:layout_marginBottom="30sp"
            android:backgroundTint="#1785C4"
            android:onClick="mentorRegister"
            android:text="REGISTER"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mentorB"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="125dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Mentor!"
        android:textColor="#1685C4"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="92dp" />
</androidx.constraintlayout.widget.ConstraintLayout>