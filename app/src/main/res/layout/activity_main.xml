<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/skip_this"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="top"
        android:lineSpacingExtra="2sp"
        android:text="@string/skip_this"
        android:textAppearance="@style/skip_this"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="96dp"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:layout_marginStart="142dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="142dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/logo" />

    <!-- Get expert advice for any field you want to pursue. -->

    <TextView
        android:id="@+id/get_expert_"
        android:layout_width="307dp"
        android:layout_height="132dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="49dp"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/get_expert_"
        android:lineSpacingExtra="0sp"
        android:gravity="left"
        android:textAppearance="@style/get_expert_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <TextView
        android:id="@+id/which_appli"
        android:layout_width="216dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="98dp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="@string/which_appli"
        android:textAppearance="@style/which_appli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_expert_" />

    <!-- Button -->

    <Button
        android:id="@+id/mentor"
        android:layout_width="318dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/master"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/which_appli"
        android:onClick="mentorClick"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/i_m_mentor"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/menteeB"
        android:layout_width="318dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="47dp"
        android:background="@drawable/master"
        android:fontFamily="@font/nunito_bold"
        android:onClick="menteeClick"
        android:text="@string/i_m_mentee"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentor" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="skip_this" />
</androidx.constraintlayout.widget.ConstraintLayout>